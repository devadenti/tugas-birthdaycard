<RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/usibday" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="60sp"
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:padding="45dp"
            android:text="Happy Birthday!"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            android:fontFamily="monospace"
            android:textStyle="bold|italic"
            android:textColor="@android:color/white"
            android:paddingTop="20dp"
            android:paddingBottom="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Sending special birthday wishes to my dear friend who I love spending time with! Thank you for always being such a great friend through the good and difficult times. You're the best"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="15sp"
            android:fontFamily="monospace"
            android:textStyle="bold|italic"
            android:textColor="@android:color/white"
            android:paddingBottom="50dp"
            android:paddingRight="20dp"
            android:text="your friend, Ike"/>






</RelativeLayout>